# Application parameters and settings. See https://doc.nette.org/configuring

parameters:


application:
	# Error presenter to handle application errors
	errorPresenter: Error
	# Presenter mapping pattern
	mapping:
		*: App\*Module\Presenters\*Presenter


database:
	# SQLite database source location
	dsn: 'sqlite:%appDir%/../db/organise.sqlite.db'
	user:
	password:


extensions:
	translation: Contributte\Translation\DI\TranslationExtension
